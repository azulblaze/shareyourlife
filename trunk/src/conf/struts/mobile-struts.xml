<!DOCTYPE struts PUBLIC 
	"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
	"http://struts.apache.org/dtds/struts-2.0.dtd">
	
<struts>

	<package name="mobile" extends="tiles-default" namespace="/m">
	
		<action name="index" class="homeAction" method="index">
		 	<result name="welcome" type="tiles">m.page.index</result>
		 	<result name="success" type="tiles">m.page.main</result>
		 </action>
		 
		<action name="login" class="accountAction" method="login" >
			<result name="email_valid" type="tiles">m.page.error_email_not_valid</result>
			<result name="been_closed" type="tiles">m.page.error_been_closed</result>
			<result name="input" type="tiles">m.page.login</result>
			<result name="success" type="redirect-action">index</result>
		</action>	
		
		<action name="reg" class="accountAction" method="register" >
			<result name="email_valid" type="tiles">m.page.error_email_not_valid</result>
			<result name="input" type="tiles">m.page.reg</result>
		</action>	 
		 
	</package>

</struts>