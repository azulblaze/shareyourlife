<!DOCTYPE struts PUBLIC 
	"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
	"http://struts.apache.org/dtds/struts-2.0.dtd">
	
<struts>
	<package name="user" extends="struts-default">

		<global-results>
			<result name="exception">/html/error.html</result>
			<result name="json">/WEB-INF/pages/common/json_response_tile.jsp</result>	
		</global-results>
		
		<action name="signup" class="userAction" method="postUser">
			<result name="success">/WEB-INF/pages/main/signup.jsp</result>
		</action>
		
		<action name="signin" class="userAction" method="getUser">
			<result name="success">/WEB-INF/pages/main/signup.jsp</result>
		</action>
		
		<action name="signout" class="userAction" method="deleteUser">
			<result name="success">/WEB-INF/pages/main/signup.jsp</result>
		</action>
		
		<action name="changepassword" class="userAction" method="updatePassword">
			<result name="success">/WEB-INF/pages/main/signup.jsp</result>
		</action>
		
		<action name="changeheader" class="userAction" method="updateHeader">
			<result name="success">/WEB-INF/pages/main/signup.jsp</result>
		</action>
	</package>

</struts>